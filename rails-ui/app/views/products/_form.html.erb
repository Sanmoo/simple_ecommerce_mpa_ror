<div class="flex flex-col border-2 rounded px-4 pb-4 shadow w-3/4 xl:w-1/2 mx-auto mt-3">
  <%= form_with(model: product, local: true) do |form| %>
    <% if product.errors.any? %>
      <%= render 'common/message_panel', base_color: 'red' do %>
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul class="list-disc pl-8">
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>

    <div class="flex flex-wrap mb-2 pt-4">
      <%= form.label :name, class: 'w-full md:w-1/4' %>
      <%= form.text_field :name, class: "w-full md:w-3/4 ipt-primary #{product.errors[:name].any? ? 'border-red-700' : ''}" %>
    </div>

    <div class="flex flex-wrap mb-2">
      <%= form.label :description, class: 'w-full md:w-1/4' %>
      <%= form.text_area :description, class: "w-full md:w-3/4 ipt-primary #{product.errors[:description].any? ? 'border-red-700' : ''}" %>
    </div>

    <div class="flex flex-wrap mb-2">
      <%= form.label :price, class: 'w-full md:w-1/4' %>
      <%= form.text_field :price, class: "w-full md:w-3/4 ipt-primary #{product.errors[:price].any? ? 'border-red-700' : ''}" %>
    </div>

    <div class="flex flex-wrap mb-2">
      <%= form.label :picture, class: 'w-full md:w-1/4' %>
      <%= form.file_field :picture, class: "w-full md:w-3/4 ipt-primary #{product.errors[:picture].any? ? 'border-red-700' : ''}" %>
    </div>

    <div class="flex flex-wrap">
      <%= form.label :quantity_in_stock, class: 'w-full md:w-1/4' %>
      <%= form.number_field :quantity_in_stock, class: "w-full md:w-3/4 ipt-primary #{product.errors[:quantity_in_stock].any? ? 'border-red-700' : ''}" %>
    </div>

    <div class="w-full mt-3 flex justify-center">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
