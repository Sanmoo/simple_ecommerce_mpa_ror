<div class="flex flex-col h-full mb-5">
  <div class="w-full flex justify-center py-8">
    <h2 class="text-2xl">Sign up</h2>
  </div>

  <div class="flex flex-col border-2 rounded p-4 shadow w-3/4 xl:w-1/2 mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-wrap mb-2">
        <%= f.label :email, class: 'w-full md:w-1/4' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'w-full md:w-3/4 ipt-primary' %>
      </div>

      <div class="flex flex-wrap">
        <%= f.label :password, class: 'w-full md:w-1/4' %>
        <%= f.password_field :password, autocomplete: 'password', class: 'w-full md:w-3/4 ipt-primary' %>
        <% if @minimum_password_length %>
          <div class="w-full md:w-1/4"></div>
          <em class="w-full md:w-3/4">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="flex flex-wrap">
        <%= f.label :password_confirmation, class: 'w-full md:w-1/4' %>
        <%= f.password_field :password_confirmation, autocomplete: "password-confirmation", class: 'w-full md:w-3/4 ipt-primary' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="w-full md:w-3/4 ml-auto mt-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="flex justify-center my-3">
        <%= f.submit 'Sign up', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
