<div class="flex flex-col h-full">
  <div class="w-full flex justify-center py-8">
    <h2 class="text-2xl">Log in</h2>
  </div>

  <div class="flex flex-col border-2 rounded p-4 shadow w-3/4 xl:w-1/2 mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex flex-wrap mb-2">
        <%= f.label :email, class: 'w-full md:w-1/4' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'w-full md:w-3/4 ipt-primary' %>
      </div>

      <div class="flex flex-wrap">
        <%= f.label :password, class: 'w-full md:w-1/4' %>
        <%= f.password_field :password, autocomplete: 'current-password', class: 'w-full md:w-3/4 ipt-primary' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="w-full md:w-3/4 ml-auto mt-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="flex justify-center my-3">
        <%= f.submit "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
